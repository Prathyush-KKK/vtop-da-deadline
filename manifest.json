{
  "manifest_version": 2,
  "name": "ExVTOP (Extended VTOP)",
  "version": "2.5.5",
  "description": "Easily see DA",
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["content.js"],
      "matches": ["https://vtop.vit.ac.in/vtop/*"]
    }
  ],
  "permissions": [
    "webRequest",
    "tabs",
    "https://vtop.vit.ac.in/vtop/*",
    "storage",
    "notifications",
    "identity",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "logo.png"
  }
}
